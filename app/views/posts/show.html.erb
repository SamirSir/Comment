
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>


<hr>

<% @comments.each do |comment| %>
	<%= comment.user.username %>:<%= comment.body %> <sub>[<%= comment.created_at.strftime("%r, %B %d, %Y") %>]</sub><br>
<% end %>	
<hr>

<%= form_with model: [@post, @comment]  do |f| %>
	<%= f.text_field :body %>
	<%= f.submit %>
<% end %>
<hr>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
